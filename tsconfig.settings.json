{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": [
      "ES2020",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots" : [
      "./node_modules/@types",
      "src/types"
    ],
    "sourceMap": true,  // ← ソースマップを出力する
    "declaration": true, // ← コンパイルしたtsファイルの中でexportしているもの全ての型定義ファイルを出力する
    "outDir": "./lib",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
